<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B7B7B7"/> <!-- Цвет тени -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Основная форма -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
    <shape android:shape="rectangle">
        <solid android:color="@color/white"/>
        <corners android:radius="20dp"/>
        <padding android:right="20dp" android:left="20dp"/>
    </shape>
</item>
    </layer-list>