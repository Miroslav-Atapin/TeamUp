<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    Text    -->

    <style name="TitleHeader">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMedium">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSmall">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--    Button  -->

    <style name="BtnDefault">
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">20dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="BtnLightDefault">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/accent</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="BtnAction">
        <item name="backgroundTint">@color/gray</item>
        <item name="cornerRadius">20dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>

    <style name="ChipFilter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="checkedIcon">@drawable/ic_check</item>
        <item name="chipIconSize">18sp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStartPadding">20dp</item>
        <item name="chipEndPadding">20dp</item>
    </style>

    <style name="ChipAssist" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="android:textColor">@color/selector_chip_text</item>
<!--        <item name="checkedIcon">@drawable/ic_check</item>-->
        <item name="chipIconSize">18sp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStartPadding">20dp</item>
        <item name="chipEndPadding">20dp</item>
    </style>

    <!--    EditText  -->

    <style name="EditText" parent="ThemeOverlay.Material3.MaterialTimePicker.Display.TextInputEditText">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/secondary</item>
    </style>

    <style name="TextInputLayout">
        <item name="helperTextTextColor">@color/secondary</item>
        <item name="errorTextColor">#ff3333</item>
        <item name="hintEnabled">false</item>
    </style>


</resources>