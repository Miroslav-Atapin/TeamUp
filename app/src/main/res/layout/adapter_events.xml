<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_event_adapter"
     android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEventCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_point"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/tvEventLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/tvEventRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_point"
            android:drawablePadding="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:text="Название"
        android:layout_marginVertical="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSmall"
            android:textColor="@color/secondary"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawableTint="#5DA9FF"
            android:drawablePadding="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvEventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSmall"
            android:textColor="@color/secondary"
            android:drawableLeft="@drawable/ic_mappin"
            android:drawableTint="#5DA9FF"
            android:drawablePadding="5dp"/>

    </LinearLayout>

</LinearLayout>